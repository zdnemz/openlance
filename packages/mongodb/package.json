{
  "name": "@openlance/mongodb",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target bun && tsc",
    "dev": "bun build ./src/index.ts --outdir ./dist --target bun --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "mongoose": "^8.9.5"
  },
  "devDependencies": {
    "@openlance/config": "*",
    "@types/bun": "^1.1.14",
    "typescript": "^5.7.3"
  }
}
